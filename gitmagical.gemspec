Gem::Specification.new do |s|
  s.name        = 'gitmagical'
  s.version     = '1.5.0'
  s.licenses    = ['Unlicense']
  s.summary     = "A swiss army knife of git tools"
  s.description = "Initiate projects from your local folders. Update projects easily. Create new online presentations using Jekyll w/Gitpages. And more. See the Github page for full info: https://github.com/isene/gitmagic"
  s.authors     = ["Geir Isene"]
  s.email       = 'g@isene.com'
  s.files       = ["bin/gitmagic"]
  s.executables << 'gitmagic'
  s.homepage    = 'https://isene.com/'
  s.metadata    = { "source_code_uri" => "https://github.com/isene/gitmagic" }
end
